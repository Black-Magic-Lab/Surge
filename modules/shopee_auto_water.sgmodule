#!name=蝦蝦果園自動化
#!desc=每天自動做水滴任務，接近隔天午夜會自動把今天任務的獎勵全部用掉。每小時自動澆水，每次換作物後需先手動澆水一次，讓 Surge 紀錄目前的作物。需要同時開啟每日自動簽到以獲得 token。 v20220308

[Script]
cron "10 0,4,8 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_checkin.js, wake-system=1, timeout=5
cron "19 0 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_buy_free_item.js, wake-system=1, timeout=5
cron "18 0 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_mission.js, wake-system=1, timeout=30
cron "14 * * * *" script-path=https://kinta.ma/surge/scripts/shopee_auto_water.js, wake-system=1, timeout=5
cron "58 23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_signin_bundle.js, wake-system=1, timeout=5
cron "58 23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_water_mission_claim.js, wake-system=1, timeout=15
cron "58 23 * * *" script-path=https://kinta.ma/surge/scripts/shopee_grocery_store_water.js, wake-system=1, timeout=5
shopee_get_crop.js = type=http-request,pattern=^https:\/\/games\.shopee\.tw\/farm\/api\/orchard\/crop\/water(.*),script-path=https://kinta.ma/surge/scripts/shopee_get_crop.js,requires-body=true,script-update-interval=-1
shopee_get_grocery_store.js = type=http-request,pattern=^https:\/\/games\.shopee\.tw\/farm\/api\/grocery_store\/claim,script-path=https://kinta.ma/surge/scripts/shopee_get_grocery_store.js,requires-body=true,script-update-interval=-1

